<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      {{#link-to 'teams.edit' model class="btn btn-default"}}Edit Team{{/link-to}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h5>{{name}}</h5>

      <p>{{description}}</p>

      <h4>Players</h4>

      <div class="row">
        <div class="col-md-12">
        <table class="table">
          <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Position</th>
            <th>Height</th>
            <th>Weight</th>
            <th>Birth Date</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          {{#each player in model.players}}
            <tr>
              <td>{{player.number}}</td>
              <td>{{player.fullName}}</td>
              <td>{{player.position}}</td>
              <td>{{player.height}}</td>
              <td>{{player.weight}}</td>
              <td>{{player.birthDate}}</td>
              <td>{{#link-to 'player.edit' player class="btn btn-default btn-xs"}}Edit{{/link-to}}</td>
            </tr>
          {{/each}}
          </tbody>
        </table>
        </div>

      </div>
    </div>
  </div>

</div>