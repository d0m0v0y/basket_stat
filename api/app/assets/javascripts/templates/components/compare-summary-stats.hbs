<table class="table table-condensed">
    <thead>
    <tr>
        <th rowspan="2"></th>
        <th colspan="2">FT</th>
        <th colspan="2">2-points</th>
        <th colspan="2">3-points</th>
        <th colspan="3">Rebounds</th>
        <th colspan="2">Fouls</th>
        <th rowspan="2">LOS</th>
        <th rowspan="2">STL</th>
        <th rowspan="2">AST</th>
        <th rowspan="2">BLK</th>
        <th rowspan="2">EFF</th>
        <th rowspan="2">Points</th>
    </tr>
    <tr>
        <th>Hit/Tot</th>
        <th>%</th>
        <th>Hit/Tot</th>
        <th>%</th>
        <th>Hit/Tot</th>
        <th>%</th>

        <th>Off</th>
        <th>Def</th>
        <th>Tot</th>
        <th>Made</th>
        <th>On player</th>
    </tr>
    </thead>
    <tbody>
        {{summary-row stats=homeTeamStats title=homeTeamName}}
        {{summary-row stats=homeTeamLineupStats title=(concat homeTeamName ' (lineup)')}}
        {{summary-row stats=homeTeamBenchStats title=(concat homeTeamName ' (bench)')}}
        <tr>
            <td colspan="18"><hr></td>
        </tr>
        {{summary-row stats=awayTeamStats title=awayTeamName}}
        {{summary-row stats=awayTeamLineupStats title=(concat awayTeamName ' (lineup)')}}
        {{summary-row stats=awayTeamBenchStats title=(concat awayTeamName ' (bench)')}}
    </tbody>
</table>
